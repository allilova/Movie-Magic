
            <section id="catalog">
                <h1>All Movies</h1>
                <div class="band">

                   {{#each movie}}
                    <div class="flip flip-vertical">
                        <div class="front">
                            <img src={{imageUrl}}
                                alt={{name}}>
                        </div>
                        <div class="back">
                            <h1>{{name}}</h1>
                            <h2>{{genre}}</h2>
                            <p>{{description}}</p>
                            <a href="#" class="details">Details</a>
                        </div>
                    </div>
                    {{/each}}

                    <!-- If there are still no posts in the database display: -->
                    <!-- <div class="no-posts">
                        <p class="no-offer">There are no posts yet...</p>
                    </div> -->
                </div>
            </section>
       